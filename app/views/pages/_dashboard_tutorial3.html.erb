<%# --------------------- ONBOARDING TUTORIAL - STEP 3 ---------------------- %>
<div id="dashboard-tutorial3" class="pt-3 dashboard-tutorial-card d-none">
  <i class="fas fa-times tutorial-close-button" data-action= "click->onboarding#hideTutorial" data-current-highlight= 'navbar-packages'></i>
  <div class="flex-grow-1 d-flex flex-column justify-content-center">
    <%= inline_svg_tag('add.svg') %>
    <h3 class="upcase mt-4 mb-3 tutorial-label"><%= t('packages.index.choose_a_package') %></h3>
    <p><%= t('packages.index.presentation') %></p>
    <p>(<%= t('tutorial.dashboard.optional') %>)</p>
  </div>
  <div class="dashboard-tutorial-controls d-flex justify-content-between">
    <%= link_to t('tutorial.dashboard.previous'),
                "",
                class: 'btn-navy-border me-2',
                data: { action: 'click->onboarding#previousStep',
                        current_number: 3,
                        current_highlight: 'navbar-packages',
                        previous_step_highlight: 'navbar-plans',
                        manager_or_owner: (current_user.manager? || current_user.owner?) } %>
    <%= link_to t('tutorial.dashboard.next'),
                "",
                class: 'btn-navy-border',
                data: { action: 'click->onboarding#nextStep',
                        current_number: 3,
                        current_highlight: 'navbar-packages',
                        next_step_highlight: 'navbar-documents',
                        manager_or_owner: (current_user.manager? || current_user.owner?) } %>
  </div>
</div>
